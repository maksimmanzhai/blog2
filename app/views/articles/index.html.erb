<% @articles.each do |article| %>
<div class="centred">
  <h2>
    <%= article.title %>
  </h2>
  <p>
    <%= article.text %>
  </p>
  <h5>
    <%= article.created_at %>
  </h5>
  <p>
    <%= link_to 'Show comment', article_path(article) %> | 
    <%= link_to 'Edit', edit_article_path(article) %> | 
    <%= link_to 'Delete', article_path(article), method: :delete, data: { confirm: 'Are you sure?'} %>
  </p>
</div>
<% end %>
